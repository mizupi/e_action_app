<style>
  body {
    background-color: white;
}
</style>
<div class="flex h-screen">
  <div class="m-auto mt-10">
    <div class="p-8 shadow-lg rounded-xl text-center bg-white">

      <svg xmlns="http://www.w3.org/2000/svg" class="inline text-cyan-600 h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
      </svg>

      <h1 class="text-3xl font-bold text-cyan-500">Sign Up</h1>
      <h3 class="text-1xl font-semibold text-gray-500">Sign up for an account!</h3>

      <%= form_with model: @user, url: user_registration_path, class:"text-center pt-3", local: true do |f| %>

        <%= render "devise/shared/error_messages", model: f.object %>

        <div>
          <label class="text-gray-500">なまえ</label><br />
          <%= f.text_area :user_name, class:"p-1 rounded-lg bg-gray-100 shadow-md focus:outline-none focus:border-2 border-cyan-500", id:"email", placeholder:"10文字以内", autofocus: true, maxlength: "10" %>
        </div>
        <div class="pt-3">
          <label class="text-gray-500">メールアドレス</label><br />
          <%= f.email_field :email, class:"p-1 rounded-lg bg-gray-100 shadow-md focus:outline-none focus:border-2 border-cyan-500", id:"email", placeholder:"1234@com", autofocus: true %>
        </div>
        <div class="pt-3">
          <label class="text-gray-500">パスワード（英数字6文字）</label><br />
          <%= f.password_field :password, class:"p-1 rounded-lg bg-gray-100 shadow-md focus:outline-none focus:border-2 border-cyan-500", id:"password", placeholder:"英数字6文字" %>
        </div>
        <div class="py-3">
          <label class="text-gray-500">パスワード再入力</label><br />
          <%= f.password_field :password_confirmation, class:"p-1 rounded-lg bg-gray-100 shadow-md focus:outline-none focus:border-2 border-cyan-500", id:"password_confirmation", placeholder:"" %>
        </div>
        <%= f.submit "とうろくする" ,class:"bg-green-200 p-2 pr-5 pl-5 text-gray-500 font-semibold rounded-xl border-cyan-700 focus:ring-2 m-4 cursor-pointer" %>
      <% end %>
    </div>
  </div>
</div>
