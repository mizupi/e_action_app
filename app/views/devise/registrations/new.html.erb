<div class="min-h-screen flex flex-col items-center bg-amber-50">
  <div class="flex flex-col bg-white shadow-lg px-4 sm:px-6 md:px-8 lg:px-10 py-8 mt-4 rounded-3xl w-50 max-w-md">
    <div class="font-bold self-center text-xl sm:text-3xl text-green-500">
      新しくはじめる
    </div>
    <div class="mt-4 self-center text-base text-yellow-900">
      アカウントを作りましょう！
    </div>

    <div>
      <%= form_with model: @user, url: user_registration_path, class:"pt-3", local: true do |f| %>

        <%= render "devise/shared/error_messages", resource: resource %> 

        <div class="flex flex-col mb-5">
          <label for="user_name" class="mb-1 text-xs sm:text-sm tracking-wide text-yellow-900">なまえ（10文字以内）</label>
          <div class="relative">
            <div class="inline-flex items-center justify-center absolute left-0 top-0 h-full w-10 text-green-500">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
              </svg>
            </div>

            <%= f.text_field :user_name, class:"text-sm placeholder-gray-500 pl-10 pr-4 rounded-2xl border border-gray-400 w-full py-2 focus:outline-none focus:border-blue-400", id:"user-name", placeholder:"Enter your name", autofocus: true, maxlength: "10" %>
          </div>
        </div>
        <div class="flex flex-col mb-5">
          <label for="email" class="mb-1 text-xs sm:text-sm tracking-wide text-yellow-900">メールアドレス</label>
          <div class="relative">
            <div class="inline-flex items-center justify-center absolute left-0 top-0 h-full w-10 text-green-500">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            </div>

            <%= f.email_field :email, class:"text-sm placeholder-gray-500 pl-10 pr-4 rounded-2xl border border-gray-400 w-full py-2 focus:outline-none focus:border-blue-400", id:"email", placeholder:"Enter your email" %>
          </div>
        </div>
        <div class="flex flex-col mb-5">
          <label for="image" class="mb-1 text-xs sm:text-sm tracking-wide text-yellow-900">アイコンがぞう<span class="font-semibold">（あとからでもせっていできます）</span></label>
          <%= f.file_field :image, class:"text-sm placeholder-gray-500 pl-10 pr-4 rounded-2xl w-full py-2 focus:outline-none focus:border-blue-400"%>
        </div>
        <div class="flex flex-col mb-6">
          <label for="password" class="mb-1 text-xs sm:text-sm tracking-wide text-yellow-900">パスワード（英数字6文字）</label>
          <div class="relative">
            <div class="inline-flex items-center justify-center absolute left-0 top-0 h-full w-10 text-green-500">
              <span>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z" />
                </svg>
              </span>
            </div>

            <%= f.password_field :password, class:"text-sm placeholder-gray-500 pl-10 pr-4 rounded-2xl border border-gray-400 w-full py-2 focus:outline-none focus:border-blue-400", id:"password", placeholder:"Enter your password" %>
          </div>
        </div>
        <div class="flex flex-col mb-6">
          <label for="password" class="mb-1 text-xs sm:text-sm tracking-wide text-yellow-900">パスワード再入力</label>
          <div class="relative">
            <div class="inline-flex items-center justify-center absolute left-0 top-0 h-full w-10 text-green-500">
              <span>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z" />
                </svg>
              </span>
            </div>

            <%= f.password_field :password_confirmation, class:"text-sm placeholder-gray-500 pl-10 pr-4 rounded-2xl border border-gray-400 w-full py-2 focus:outline-none focus:border-blue-400", id:"password_confirmation", placeholder:"******" %>
          </div>
        </div>

        <div class="flex w-full">
          <%= button_tag type: "submit", class: "flex mt-2 items-center justify-center focus:outline-none text-white text-sm sm:text-base bg-green-500 hover:bg-green-600 rounded-2xl py-2 w-full transition duration-150 ease-in" do %>
            <span class="mr-2">とうろくする</span>
            <span>
              <svg class="h-6 w-6" fill="none" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24" stroke="currentColor">
                <path d="M13 9l3 3m0 0l-3 3m3-3H8m13 0a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </span>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

    <div class="items-center mt-6">
      <p class="text-yellow-900 font-medium text-xs block">すでにアカウントを持っていますか？<p>
      <%= link_to 'ここからログイン', new_user_session_path, class:"text-sm text-green-600 font-semibold text-center block mt-2" %>
    </div>
</div>