<div class="mt-12">
<% unless current_user.id == @user.id %>
  <% if current_user.following?(@user) %>
    <%# 現在のユーザーと相互フォロー状態にある場合 %>
    <% if current_user.followers?(@user) %>
      <div class="text-gray-700 text-xl mb-4"><span class="text-green-700 text-2xl font-semibold"><%= @user.user_name %></span>さんはともだちです</div>
      <%= form_with(model: current_user.active_relationships.find_by(followed_id: @user.id),
      html: { method: :delete }, local: true) do |f| %>
        <%= button_tag type: 'submit' do %>
          <span class="text-sm tracking-tight cursor-pointer hover:border-b-2">→ ともだちをやめる</span>
        <% end %>
      <% end %>

    <%# 現在のユーザーにともだちリクエスト中で、相手が承認していない場合？ %>
    <% else %>
      <%= form_with(model: current_user.active_relationships.find_by(followed_id: @user.id),
      html: { method: :delete }, local: true) do |f| %>
        <%= button_tag type: 'submit' do %>
          <div class="relative bg-yellow-400 text-gray-700 p-3 rounded-lg text-sm font-semibold tracking-tight shadow coursor-pointer w-auto">
            <span class="hover:hidden">ともだちリクエスト中</span>
            <span class="hidden hover:inline">リクエストを取り消す</span>
          </div>
        <% end %>
      <% end %>
    <% end %>

  <%# 現在のユーザーにともだちリクエストをしていない場合 %>
  <% else %>
    <%= form_with(model: current_user.active_relationships.build, local: true) do |f| %>
      <div><%= hidden_field_tag :followed_id, @user.id %></div>
      <%= button_tag type: 'submit' do %>
        <div class="relative bg-green-500 text-gray-700 p-3 rounded-lg text-sm font-semibold tracking-tight shadow cursor-pointer w-auto">
        ともだちリクエストを送る
        </div>
      <% end %>
    <% end %>
  <% end%>

<% end %>
</div>