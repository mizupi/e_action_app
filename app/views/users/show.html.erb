<section class="text-gray-600 body-font">
  <div class="container p-5 mx-auto flex flex-col">
    <div class="lg:w-4/6 mx-auto">

      <%# ユーザー情報 %>
      <div class="flex flex-col sm:flex-row">

        <%# ユーザー情報左側、写真とボタン %>
        <div class="sm:w-1/3 sm:pr-8 sm:py-4 flex flex-col justify-center items-center text-center">
          <% unless @user.image.blank? %>
            <div>
              <%= image_tag @user.image, class:"w-44 h-44 rounded-full inline-flex items-center justify-center object-cover"%>
            </div>
          <% else %>
            <div class="w-44 h-44 rounded-full inline-flex items-center justify-center bg-gray-200 text-gray-400">
              <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-20 h-20" viewBox="0 0 24 24">
                <path d="M20 21v-2a4 4 0 00-4-4H8a4 4 0 00-4 4v2"></path>
                <circle cx="12" cy="7" r="4"></circle>
              </svg>
            </div>
          <% end %>

          <% if current_user.id == @user.id %>
            <div class="sm:mt-8">
              <%= link_to 'アカウントせってい', edit_user_registration_path(current_user), class:"relative bg-green-400 text-gray-700 p-3 rounded-lg text-sm font-semibold shadow mb-4 inline-table" %>
            </div>
          <% elsif %>
            <%= render 'follow' %>
          <% end %>
        </div>

        <%# ユーザー情報右側、名前とメールアドレス %>
        <div class="sm:w-2/3 sm:pl-12 sm:pt-4 sm:border-l border-gray-200 sm:border-t-0 border-t mt-4 pt-4 sm:mt-0 text-center sm:text-left flex flex-col justify-between">
          <div class="flex text-lg mb-4">
            <div class="mr-4">なまえ :</div>
            <div class="border-solid border-gray-200"><%= @user.user_name %></div>
          </div>
          <% if current_user.id == @user.id %>
            <div class="flex text-lg mb-4">
              <div class="mr-4">メールアドレス :</div>
              <div class="border-solid border-gray-200"><%= @user.email %></div>
            </div>
          <% end %>
          <div class="flex text-lg mb-4">
            <div class="mr-4">今日のアクションの数 :</div>
            <div class="border-solid border-gray-200"><%= @user_activities_today %></div>
          </div>
          <div class="flex text-lg mb-4">
            <div class="mr-4">すべてのアクションの数 :</div>
            <div class="border-solid border-gray-200"><%= @user_activities.count %></div>
          </div>
          <div class="flex text-lg mb-4">
            <%= link_to users_path(@user), class:"inline-flex items-center hover:border-b border-gray-200" do %>
              <div class="mr-4">ともだち :</div>
              <span class="text-green-500">
                <%= @user.matchers.count %>
              </span>
            <% end %>
          </div>
          <%= render 'friend_action' %>
        </div>
      </div>

      <%# これまでのアクション ここから%>
      <div class="w-auto h-auto p-7">
        <div class="px-4 p-10 flex justify-center">
          <h1 class="text-3xl ml-2 lg:ml-0 lg:text-4xl font-bold text-gray-700 tracking-normal lg:w-11/12 text-center">これまでの<span class="text-green-600">アクション</span></h1>
        </div>

        <%# アクションリストのアコーディオン %>
        <%= render partial: "actions" %>

      </div>
      <%# これまでのアクション ここまで %>

    </div>
  </div>
</section>
